@using Microsoft.AspNetCore.Identity
@using FilmDB.Controllers
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    ViewData["Title"] = "Roles";
}

<table>
    @foreach (var role in ViewBag.Roles)
    {
        <tr>
            <td>@role.Name</td>
            <td><a asp-action="Remove" asp-route-id="@role.Id"><input type="submit" class="btn btn-danger" value="Remove"/></a></td>
            <td><a asp-action="Edit" asp-route-id="@role.Id"><input type="submit" class="btn btn-warning" value="Edit"/></a></td>
        </tr>
    }
</table>

<div asp-validation-summary="All">

</div>

<table>
    <tr>
        <td><a asp-action="Add"><input type="submit" value="Add new role" class="btn btn-primary"/></a></td>
        @*<td><a asp-action="Remove"><input type="submit" value="Add new role" class="btn btn-primary"/></a></td>
        <td><a asp-action="Update"><input type="submit" value="Add new role" class="btn btn-primary"/></a></td>
        <td><a asp-action="Get all"><input type="submit" value="Add new role" class="btn btn-primary"/></a></td>*@
    </tr>
</table>
