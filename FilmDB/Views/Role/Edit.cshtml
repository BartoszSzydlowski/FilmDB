@{
    ViewData["Title"] = "Edit role";
}

@model Microsoft.AspNetCore.Identity.IdentityRole

<form method="post">
    <input asp-for="@Model.Id" type="hidden"/>
    <input asp-for="@Model.ConcurrencyStamp" type="hidden"/>
    <table>
        <tr>
            <td>Name: </td>
            <td><input type="text" asp-for="Name"/></td>
        </tr>
    </table>
    <div asp-validation-summary="All"></div>
    <div class="d-flex justify-content-end">
        <a class="m-2" asp-action="Edit"><input type="submit" value="Edit" class="btn btn-success" /></a>
        <a class="m-2" asp-action="Index" asp-controller="Film"><input type="submit" value="Return to home page" class="btn btn-primary" /></a>
    </div>
</form>