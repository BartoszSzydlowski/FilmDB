@{
	ViewData["Title"] = "Edit";
}
@model FilmModel

<form method="post">
	<table class="table">
		<tr class="input-group mb-3">
			<td>
				<div class="input-group-prepend">
					<span class="input-group-text" id="basic-addon1">Title</span>
					<input type="text" asp-for="Title" class="form-control" aria-describedby="basic-addon1" />
				</div>
			</td>
			<td><span asp-validation-for="Title"></span></td>
		</tr>
		<tr class="input-group mb-3">
			<td>
				<div class="input-group-prepend">
					<span class="input-group-text" id="basic-addon2">Genre</span>
					<input type="text" asp-for="Genre" class="form-control" aria-describedby="basic-addon2" />
				</div>
			</td>
			<td><span asp-validation-for="Genre"></span></td>
		</tr>
		<tr class="input-group mb-3">
			<td>
				<div class="input-group-prepend">
					<span class="input-group-text" id="basic-addon3">Year</span>
					<input type="text" asp-for="Year" class="form-control" aria-describedby="basic-addon3" />
				</div>
			</td>
			<td><span asp-validation-for="Year"></span></td>
		</tr>
	</table>
	<table>
		<tr>
			<td><a asp-action="Add"><input type="submit" value="Add new" class="btn btn-primary" /></a></td>
			<td><a asp-action="Index"><input type="submit" value="Return to home page" class="btn btn-primary" /></a></td>
		</tr>
	</table>
</form>