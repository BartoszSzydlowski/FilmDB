@{
    ViewData["Title"] = "Edit";
}
@model FilmModel

<form method="post">
    <table class="table">
        <tr>
            <td>Title: </td>
            <td><input type="text" asp-for="Title" /></td>
            <td><span asp-validation-for="Title"></span></td>
        </tr>
        <tr>
            <td>Genre: </td>
            <td><input type="text" asp-for="Genre" /></td>
            <td><span asp-validation-for="Genre"></span></td>
        </tr>
        <tr>
            <td>Year: </td>
            <td><input type="text" asp-for="Year" /></td>
            <td><span asp-validation-for="Year"></span></td>
        </tr>
    </table>
    <table>
        <tr>
            <td><a asp-action="Add" asp-route="Index"><input type="submit" value="Add new" class="btn btn-primary" /></a></td>
            <td><a asp-action="Index" asp-controller="Film"><input type="submit" value="Return to home page" class="btn btn-primary" /></a></td>
        </tr>
    </table>
</form>