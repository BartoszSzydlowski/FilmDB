@model FilmDB.ViewModels.IdentityViewModels.LogInViewModel

<form method="post">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <table>
                <tr class="form-group">
                    <td><label asp-for="Username" class="control-label"></label></td>
                    <td><input asp-for="Username" class="form-control" /></td>
                </tr>
                <tr class="form-group">
                    <td><label asp-for="Password" class="control-label"></label></td>
                    <td><input asp-for="Password" class="form-control" /></td>
                </tr>
            </table>
        </div>
    </div>
    <table>
        <tr>
            <td><a asp-action="Login"><input type="submit" class="btn btn-primary" value="Login"></a></td>
        </tr>
    </table>
</form>